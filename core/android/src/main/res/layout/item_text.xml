<?xml version="1.0" encoding="utf-8"?>
<com.simple.coreapp.ui.view.round.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.simple.coreapp.ui.view.round.RoundImageView
        android:id="@+id/iv_left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|start"
        android:visibility="gone"
        tools:src="@drawable/ic_notification"
        tools:visibility="visible" />

    <com.simple.coreapp.ui.view.round.RoundTextView
        android:id="@+id/tv_title"
        style="@style/TextBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="Demo" />

    <com.simple.coreapp.ui.view.round.RoundImageView
        android:id="@+id/iv_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:visibility="gone"
        tools:src="@drawable/ic_notification"
        tools:visibility="visible" />

</com.simple.coreapp.ui.view.round.RoundFrameLayout>